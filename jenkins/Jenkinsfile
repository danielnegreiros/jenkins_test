pipeline {
    agent {
        docker {
            image 'ansible'
            args '-u root'
         }
    }

    stages {
        stage("Build") {

           steps {
                dir ("./ansible"){
                    ansiblePlaybook colorized: true, credentialsId: 'wsl_ssh', disableHostKeyChecking: true, playbook: 'playbook.yml',  vaultCredentialsId: 'ansible_vault'
                    // sh 'ansible-playbook ./playbook.yml'
                }
            }
        }
    }
}
